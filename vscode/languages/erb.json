{
  "comments": {
    "blockComment": ["<%#", "%>"]
  },
  "brackets": [
    ["<%", "%>"],
    ["<%=", "%>"],
    ["<%#", "%>"]
  ],
  "autoClosingPairs": [
    ["<%", "%>"],
    ["<%=", "%>"],
    ["<%#", "%>"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["`", "`"],
    {
      "open": "'",
      "close": "'",
      "notIn": ["string", "comment"]
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["string"]
    },
    ["<", ">"],
    {
      "open": "%",
      "close": "%",
      "notIn": ["string", "comment"]
    }
  ],
  "surroundingPairs": [
    ["<%", "%>"],
    ["<%=", "%>"],
    ["<%#", "%>"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["<", ">"],
    ["%", "%"]
  ],
  "onEnterRules": [
    {
      "beforeText": {
        "pattern": "<(?!(?:area|base|br|col|embed|hr|img|input|keygen|link|menuitem|meta|param|source|track|wbr))([_:\\w][_:\\w-.\\d]*)(?:(?:[^'\"/>]|\"[^\"]*\"|'[^']*')*?(?!\\/)>)[^<]*$",
        "flags": "i"
      },
      "afterText": {
        "pattern": "^<\\/([_:\\w][_:\\w-.\\d]*)\\s*>",
        "flags": "i"
      },
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": {
        "pattern": "<(?!(?:area|base|br|col|embed|hr|img|input|keygen|link|menuitem|meta|param|source|track|wbr))([_:\\w][_:\\w-.\\d]*)(?:(?:[^'\"/>]|\"[^\"]*\"|'[^']*')*?(?!\\/)>)[^<]*$",
        "flags": "i"
      },
      "action": {
        "indent": "indent"
      }
    }
  ]
}
